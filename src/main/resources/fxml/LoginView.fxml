                  <VBox alignment="BOTTOM_CENTER" prefHeight="198.0" prefWidth="391.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label prefHeight="58.0" prefWidth="187.0" text="Welcome" textFill="#dde9ff" textOverrun="CENTER_WORD_ELLIPSIS">
