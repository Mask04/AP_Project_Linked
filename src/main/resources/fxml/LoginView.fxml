                        <Insets top="25.0" />
                     </VBox.margin>
                     <font>
                        <Font name="Calibri Bold Italic" size="20.0" />
                     </font>
                     <styleClass>
                        <String fx:value="login-button" />
                        <String fx:value="cursor-hand" />
                     </styleClass>
                  </Button>
                  <Label fx:id="statusMassageLabel" alignment="CENTER" prefHeight="17.0" prefWidth="312.0" textFill="RED" visible="false">
                     <font>
                        <Font name="Calibri Bold" size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets left="85.0" right="85.0" />
               </padding>
            </VBox>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Forgot your Password ?" textAlignment="CENTER" textFill="#14efe9">
                     <font>
                        <Font name="System Bold Italic" size="12.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children></VBox>
   </right>
