                     <children>
                        <Button fx:id="signupViewButton" mnemonicParsing="false" onAction="#on_signupViewButton_clicked" prefHeight="54.0" prefWidth="111.0" style="-fx-background-radius: 50; -fx-border-radius: 50;" stylesheets="@../Styling/loginStyle.css" text="SignUp">
