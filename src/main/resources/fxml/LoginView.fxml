<BorderPane prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: #799bc9;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.Linked.client.viewControllers.LoginController">
   <right>
      <VBox prefHeight="720.0" prefWidth="437.0" style="-fx-background-color: #19498b; -fx-background-radius: 20;" stylesheets="@../Styling/loginStyle.css" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="BOTTOM_CENTER" prefHeight="203.0" prefWidth="391.0">
