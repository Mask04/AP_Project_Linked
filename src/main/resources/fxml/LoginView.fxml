      <VBox fx:id="vboxCenter" style="-fx-background-color: #799bc9;" styleClass="vbox-background-center" stylesheets="@../Styling/loginStyle.css" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="54.0" prefWidth="448.0">
               <children>
                  <ImageView fitHeight="90.0" fitWidth="170.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/linkedEdited.png" />
                     </image>
                  </ImageView>
