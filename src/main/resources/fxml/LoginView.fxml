                              <Insets right="8.0" top="8.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Berlin Sans FB" size="23.0" />
                           </font>
                           <styleClass>
                              <String fx:value="signup-button" />
                              <String fx:value="cursor-hand" />
                           </styleClass>
                        </Button>
                        <Button fx:id="loginViewButton" mnemonicParsing="false" prefHeight="54.0" prefWidth="111.0" style="-fx-background-radius: 50;" stylesheets="@../Styling/loginStyle.css" text="Login">
                           <HBox.margin>
                              <Insets top="8.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Berlin Sans FB" size="23.0" />
                           </font>
                           <styleClass>
                              <String fx:value="login-button" />
                              <String fx:value="cursor-hand" />
                           </styleClass>
                        </Button>
                     </children>
                     <opaqueInsets>
                        <Insets top="25.0" />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets right="8.0" top="8.0" />
                     </HBox.margin>
                  </HBox>
               </children>
            </HBox>
         </children></VBox>
   </center>
